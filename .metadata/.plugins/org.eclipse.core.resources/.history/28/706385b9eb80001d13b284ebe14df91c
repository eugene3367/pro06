<body>
    <section class="container">
        <article class="data">
            <div><h2>AJAX Data Trans</h2></div>
            <form>
				<input type="text" id="id" name="id" placeholder="아이디입력"/>
				<input type="hidden" id="idck" name="idck" value="no" />
			</form>
            <button type="button" id="btn1">회원정보 조회</button><br>
            <div id="msg"></div>
            <ul id="result"></ul>
        </article>
    </section>
    <br><hr><br>
    <script>
        $(document).ready(function(){
            $("#btn1").click(function(){
				var id = $("#id").val();
				if(id==="true"){
					alert("아이디가 입력되지 않았습니다.");

				}
				
				$.ajax({
					url:"/ajax/getUser.do?id="+id,
					data:id,
					contentType:'application/json;charset=utf-8',
					method:"GET",
					dataType:"json"
				})				
				.done(function(res){
					console.log(res);
					$.each(res, function(key, value){
						$("result").append("<li>"+key+" : "+value+"</li>");
					});
				})
				.fail(function(xhr, status, errorThrown){
					$("#msg").text("불러오지 못해.");
				})
				.always(function(xhr, status){
					
				})
            });
        });
    </script>
    </div>
</body>
